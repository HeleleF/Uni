@model Belegaufgabe3.Models.Todo

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Todo</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => model.titel)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.titel)
            @Html.ValidationMessageFor(model => model.titel, "", new { @class = "text-danger" })
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.beschreibung)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.beschreibung)
            @Html.ValidationMessageFor(model => model.beschreibung, "", new { @class = "text-danger" })
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

